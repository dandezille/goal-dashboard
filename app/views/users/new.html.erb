<div class="center-horizontal my-10">
  <%= form_for @user, html: { class: 'form' } do |form| %>
    <div class="form-field">
      <%= form.label :email, class: 'label-gray' %>
      <%= form.text_field :email, type: 'email', class: 'input-text' %>
    </div>

    <div class="form-field">
      <%= form.label :password, class: 'label-gray' %>
      <%= form.password_field :password, class: 'input-text' %>
    </div>

    <div class="form-field center-horizontal">
      <%= form.submit 'Sign up', class: 'btn-indigo' %>
    </div>

    <div class="center-horizontal">
      <%= link_to t(".sign_in"), sign_in_path %>
    </div>
  <% end %>
</div>
