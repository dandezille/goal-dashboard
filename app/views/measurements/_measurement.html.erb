<div id="measurement_<%= measurement.id %>" class="entry">
    <div id="date"><%= measurement.date.strftime("%A #{measurement.date.day.ordinalize} %B") %></div>
    <div id="value"><%= measurement.value %></div>
    <form id="delete_entry">
        <%= button_to "Delete", measurement_path(measurement), method: :delete, data: { confirm: "Are you sure?" }%>
    </form>
</div>