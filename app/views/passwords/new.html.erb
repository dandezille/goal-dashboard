<div class="center-horizontal my-10">
  <%= simple_form_for :password, url: passwords_path, html: { class: 'form' } do |form| %>
    <%= form.input :email, wrapper_html: { class: 'form-field' }, label_html: { class: 'label-gray'}, input_html: { class: 'input-text' } %>

    <div class="form-field center-horizontal">
      <%= form.button :submit, class: 'btn-indigo' %>
    </div>
  <% end %>
</div>
