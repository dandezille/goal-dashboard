<%= render layout: 'shared/card', locals: { title: 'Goals' } do %>
  <%= link_to 'Create goal', new_goal_path %>
  <% @goals.each do |goal| %>
    <div data-goal-id="<%= goal.id %>">
      <%= link_to goal.title, goal_path(goal) %>
      <%= link_to "Delete", goal, method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
<% end %>

