<% if flash.any? %>
  <div class="flex flex-col text-center items-center">
    <% if flash[:notice] %>
      <div class="flash notice border text-sm font-bold px-4 py-3 rounded m-4 bg-blue-100 border-blue-400 text-blue-700">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="flash alert border text-sm font-bold px-4 py-3 rounded m-4 bg-red-100 border-red-400 text-red-700">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>
<% end %>