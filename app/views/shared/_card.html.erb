<div class="my-6 lg:flex lg:justify-around">
  <div class="card lg:rounded-lg"
    <% if local_assigns.has_key? :attributes %>
      <% attributes.each do |key, value| %>
        <%= key %>="<%= value %>"
      <% end %>
    <% end %>
    >
    <% if local_assigns.has_key? :title %>
        <div class="p-6 text-indigo-100 bg-indigo-800 card-title lg:rounded-t-lg lg:p-2 lg:pl-4"><%= title %></div>
    <% end %>
    <%= yield %>
  </div>
</div>
