<div class="center-horizontal my-10">
  <%= simple_form_for :session, url: session_path, html: { class: 'form' } do |form| %>

    <%= form.input :email, wrapper_html: { class: 'form-field' }, label_html: { class: 'label-gray'}, input_html: { class: 'input-text' } %>

    <%= form.input :password, wrapper_html: { class: 'form-field' }, label_html: { class: 'label-gray'}, input_html: { class: 'input-text' } %>

    <div class="form-field center-horizontal">
      <%= form.button :submit, class: 'btn-indigo' %>
    </div>

    <div class="center-horizontal">
      <%= link_to t(".sign_up"), sign_up_path, class: 'link-indigo' %>
      <%= link_to t(".forgot_password"), new_password_path, class: 'link-indigo' %>
    </div>
  <% end %>
</div>
